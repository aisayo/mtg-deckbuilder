<h1>Edit <%= @deck.name %></h1>

<br><form action="/decks/<%= @deck.slug %>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="PATCH">
  <p><label for="name">Name: </label>
  <input type="text" name="name" id="name" value="<%= @deck.name %>">
  <p><label for="format">Format: </label>
  <select name="format" id="format">
    <option value="Standard" <% if @deck.format == "Standard" %>selected<% end %>>Standard</option>
    <option value="Modern" <% if @deck.format == "Modern" %>selected<% end %>>Modern</option>
    <option value="Legacy" <% if @deck.format == "Legacy" %>selected<% end %>>Legacy</option>
    <option value="Vintage" <% if @deck.format == "Vintage" %>selected<% end %>>Vintage</option>
    <option value="Commander" <% if @deck.format == "Commander" %>selected<% end %>>Commander</option>
  </select>
  <p><label for="colors">Color(s): </label>
  <input type="checkbox" name="colors[]" value="Black" <% if @deck.colors.include? "Black" %>checked<% end %>>Black
  <input type="checkbox" name="colors[]" value="Blue" <% if @deck.colors.include? "Blue" %>checked<% end %>>Blue
  <input type="checkbox" name="colors[]" value="Green" <% if @deck.colors.include? "Green" %>checked<% end %>>Green
  <input type="checkbox" name="colors[]" value="Red" <% if @deck.colors.include? "Red" %>checked<% end %>>Red
  <input type="checkbox" name="colors[]" value="White" <% if @deck.colors.include? "White" %>checked<% end %>>White
  <input type="checkbox" name="colors[]" value="Colorless" <% if @deck.colors.include? "Colorless" %>checked<% end %>>Colorless
  <p><label for="decklist">Decklist: </label>
  <br><textarea name="decklist" id=decklist rows="24" cols="66"><%= @deck.decklist %></textarea>
  <p><input type="submit" value="Update" id="submit">
</form>
